{
  "openapi": "3.0.0",
  "info": {
    "title": "LunaTV API",
    "version": "100.1.4",
    "description": "LunaTV 核心 API 文档（持续补充中）"
  },
  "servers": [
    {
      "url": "http://localhost:3000"
    }
  ],
  "tags": [
    {
      "name": "Auth",
      "description": "认证相关接口"
    },
    {
      "name": "User Data",
      "description": "用户数据相关接口"
    }
  ],
  "components": {
    "schemas": {
      "ApiError": {
        "type": "object",
        "properties": {
          "error": {
            "type": "string"
          }
        },
        "required": ["error"]
      },
      "ApiOk": {
        "type": "object",
        "properties": {
          "ok": {
            "type": "boolean"
          }
        },
        "required": ["ok"]
      },
      "ApiSuccess": {
        "type": "object",
        "properties": {
          "success": {
            "type": "boolean"
          }
        },
        "required": ["success"]
      },
      "FavoriteItem": {
        "type": "object",
        "properties": {
          "title": {
            "type": "string",
            "minLength": 1
          },
          "source_name": {
            "type": "string",
            "minLength": 1
          },
          "year": {
            "type": "string",
            "default": ""
          },
          "cover": {
            "type": "string",
            "default": ""
          },
          "total_episodes": {
            "type": "integer",
            "default": 0
          },
          "save_time": {
            "type": "number",
            "default": 0
          },
          "search_title": {
            "type": "string"
          },
          "origin": {
            "type": "string",
            "enum": ["vod", "live"]
          }
        },
        "required": ["title", "source_name"]
      },
      "PlayRecordItem": {
        "type": "object",
        "properties": {
          "title": {
            "type": "string",
            "minLength": 1
          },
          "source_name": {
            "type": "string",
            "minLength": 1
          },
          "year": {
            "type": "string",
            "default": ""
          },
          "cover": {
            "type": "string",
            "default": ""
          },
          "index": {
            "type": "integer",
            "default": 0
          },
          "total_episodes": {
            "type": "integer",
            "default": 0
          },
          "play_time": {
            "type": "number",
            "default": 0
          },
          "total_time": {
            "type": "number",
            "default": 0
          },
          "save_time": {
            "type": "number",
            "default": 0
          },
          "search_title": {
            "type": "string"
          }
        },
        "required": ["title", "source_name"]
      },
      "SkipConfigItem": {
        "type": "object",
        "properties": {
          "enable": {
            "type": "boolean",
            "default": true
          },
          "intro_time": {
            "type": "integer",
            "minimum": 0,
            "default": 0
          },
          "outro_time": {
            "type": "integer",
            "minimum": 0,
            "default": 0
          }
        }
      },
      "FavoriteMap": {
        "type": "object",
        "additionalProperties": {
          "allOf": [
            {
              "$ref": "#/components/schemas/FavoriteItem"
            },
            {
              "properties": {
                "title": {
                  "type": "string",
                  "minLength": 1
                },
                "source_name": {
                  "type": "string",
                  "minLength": 1
                },
                "year": {
                  "type": "string",
                  "default": ""
                },
                "cover": {
                  "type": "string",
                  "default": ""
                },
                "total_episodes": {
                  "type": "integer",
                  "default": 0
                },
                "save_time": {
                  "type": "number",
                  "default": 0
                },
                "search_title": {
                  "type": "string"
                },
                "origin": {
                  "type": "string",
                  "enum": ["vod", "live"]
                }
              }
            }
          ]
        }
      },
      "PlayRecordMap": {
        "type": "object",
        "additionalProperties": {
          "allOf": [
            {
              "$ref": "#/components/schemas/PlayRecordItem"
            },
            {
              "properties": {
                "title": {
                  "type": "string",
                  "minLength": 1
                },
                "source_name": {
                  "type": "string",
                  "minLength": 1
                },
                "year": {
                  "type": "string",
                  "default": ""
                },
                "cover": {
                  "type": "string",
                  "default": ""
                },
                "index": {
                  "type": "integer",
                  "default": 0
                },
                "total_episodes": {
                  "type": "integer",
                  "default": 0
                },
                "play_time": {
                  "type": "number",
                  "default": 0
                },
                "total_time": {
                  "type": "number",
                  "default": 0
                },
                "save_time": {
                  "type": "number",
                  "default": 0
                },
                "search_title": {
                  "type": "string"
                }
              }
            }
          ]
        }
      },
      "SkipConfigMap": {
        "type": "object",
        "additionalProperties": {
          "$ref": "#/components/schemas/SkipConfigItem"
        }
      }
    },
    "parameters": {}
  },
  "paths": {
    "/api/login": {
      "post": {
        "tags": ["Auth"],
        "summary": "用户登录",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "username": {
                    "type": "string",
                    "minLength": 1
                  },
                  "password": {
                    "type": "string",
                    "minLength": 1
                  }
                },
                "required": ["password"]
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "登录成功",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ApiOk"
                }
              }
            }
          },
          "400": {
            "description": "参数验证失败",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ApiError"
                }
              }
            }
          },
          "401": {
            "description": "认证失败",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ApiError"
                }
              }
            }
          }
        }
      }
    },
    "/api/change-password": {
      "post": {
        "tags": ["Auth"],
        "summary": "修改当前用户密码",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "newPassword": {
                    "type": "string",
                    "minLength": 1
                  }
                },
                "required": ["newPassword"]
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "修改成功",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ApiOk"
                }
              }
            }
          },
          "400": {
            "description": "参数验证失败",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ApiError"
                }
              }
            }
          },
          "401": {
            "description": "未授权",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ApiError"
                }
              }
            }
          }
        }
      }
    },
    "/api/favorites": {
      "get": {
        "tags": ["User Data"],
        "summary": "获取全部收藏",
        "responses": {
          "200": {
            "description": "返回收藏映射",
            "content": {
              "application/json": {
                "schema": {
                  "allOf": [
                    {
                      "$ref": "#/components/schemas/FavoriteMap"
                    },
                    {
                      "additionalProperties": {
                        "allOf": [
                          {
                            "$ref": "#/components/schemas/FavoriteItem"
                          },
                          {
                            "properties": {
                              "title": {
                                "type": "string",
                                "minLength": 1
                              },
                              "source_name": {
                                "type": "string",
                                "minLength": 1
                              },
                              "year": {
                                "type": "string",
                                "default": ""
                              },
                              "cover": {
                                "type": "string",
                                "default": ""
                              },
                              "total_episodes": {
                                "type": "integer",
                                "default": 0
                              },
                              "save_time": {
                                "type": "number",
                                "default": 0
                              },
                              "search_title": {
                                "type": "string"
                              },
                              "origin": {
                                "type": "string",
                                "enum": ["vod", "live"]
                              }
                            }
                          }
                        ]
                      }
                    }
                  ]
                }
              }
            }
          },
          "401": {
            "description": "未授权",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ApiError"
                }
              }
            }
          }
        }
      },
      "post": {
        "tags": ["User Data"],
        "summary": "保存收藏",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "key": {
                    "type": "string",
                    "minLength": 1,
                    "pattern": "^.+\\+.+$"
                  },
                  "favorite": {
                    "type": "object",
                    "properties": {
                      "title": {
                        "type": "string",
                        "minLength": 1
                      },
                      "source_name": {
                        "type": "string",
                        "minLength": 1
                      },
                      "year": {
                        "type": "string",
                        "default": ""
                      },
                      "cover": {
                        "type": "string",
                        "default": ""
                      },
                      "total_episodes": {
                        "type": "integer",
                        "default": 0
                      },
                      "save_time": {
                        "type": "number",
                        "default": 0
                      },
                      "search_title": {
                        "type": "string"
                      },
                      "origin": {
                        "type": "string",
                        "enum": ["vod", "live"]
                      }
                    },
                    "required": ["title", "source_name"]
                  }
                },
                "required": ["key", "favorite"]
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "保存成功",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ApiSuccess"
                }
              }
            }
          },
          "400": {
            "description": "参数验证失败",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ApiError"
                }
              }
            }
          }
        }
      },
      "delete": {
        "tags": ["User Data"],
        "summary": "删除收藏（单条或全部）",
        "parameters": [
          {
            "schema": {
              "type": "string"
            },
            "required": false,
            "name": "key",
            "in": "query"
          }
        ],
        "responses": {
          "200": {
            "description": "删除成功",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ApiSuccess"
                }
              }
            }
          },
          "400": {
            "description": "参数错误",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ApiError"
                }
              }
            }
          },
          "401": {
            "description": "未授权",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ApiError"
                }
              }
            }
          }
        }
      }
    },
    "/api/playrecords": {
      "get": {
        "tags": ["User Data"],
        "summary": "获取播放记录",
        "responses": {
          "200": {
            "description": "返回播放记录映射",
            "content": {
              "application/json": {
                "schema": {
                  "allOf": [
                    {
                      "$ref": "#/components/schemas/PlayRecordMap"
                    },
                    {
                      "additionalProperties": {
                        "allOf": [
                          {
                            "$ref": "#/components/schemas/PlayRecordItem"
                          },
                          {
                            "properties": {
                              "title": {
                                "type": "string",
                                "minLength": 1
                              },
                              "source_name": {
                                "type": "string",
                                "minLength": 1
                              },
                              "year": {
                                "type": "string",
                                "default": ""
                              },
                              "cover": {
                                "type": "string",
                                "default": ""
                              },
                              "index": {
                                "type": "integer",
                                "default": 0
                              },
                              "total_episodes": {
                                "type": "integer",
                                "default": 0
                              },
                              "play_time": {
                                "type": "number",
                                "default": 0
                              },
                              "total_time": {
                                "type": "number",
                                "default": 0
                              },
                              "save_time": {
                                "type": "number",
                                "default": 0
                              },
                              "search_title": {
                                "type": "string"
                              }
                            }
                          }
                        ]
                      }
                    }
                  ]
                }
              }
            }
          },
          "401": {
            "description": "未授权",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ApiError"
                }
              }
            }
          }
        }
      },
      "post": {
        "tags": ["User Data"],
        "summary": "保存播放记录",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "key": {
                    "type": "string",
                    "minLength": 1,
                    "pattern": "^.+\\+.+$"
                  },
                  "record": {
                    "type": "object",
                    "properties": {
                      "title": {
                        "type": "string",
                        "minLength": 1
                      },
                      "source_name": {
                        "type": "string",
                        "minLength": 1
                      },
                      "year": {
                        "type": "string",
                        "default": ""
                      },
                      "cover": {
                        "type": "string",
                        "default": ""
                      },
                      "index": {
                        "type": "integer",
                        "default": 0
                      },
                      "total_episodes": {
                        "type": "integer",
                        "default": 0
                      },
                      "play_time": {
                        "type": "number",
                        "default": 0
                      },
                      "total_time": {
                        "type": "number",
                        "default": 0
                      },
                      "save_time": {
                        "type": "number",
                        "default": 0
                      },
                      "search_title": {
                        "type": "string"
                      }
                    },
                    "required": ["title", "source_name"]
                  }
                },
                "required": ["key", "record"]
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "保存成功",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ApiSuccess"
                }
              }
            }
          },
          "400": {
            "description": "参数验证失败",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ApiError"
                }
              }
            }
          }
        }
      },
      "delete": {
        "tags": ["User Data"],
        "summary": "删除播放记录（单条或全部）",
        "parameters": [
          {
            "schema": {
              "type": "string"
            },
            "required": false,
            "name": "key",
            "in": "query"
          }
        ],
        "responses": {
          "200": {
            "description": "删除成功",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ApiSuccess"
                }
              }
            }
          },
          "400": {
            "description": "参数错误",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ApiError"
                }
              }
            }
          },
          "401": {
            "description": "未授权",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ApiError"
                }
              }
            }
          }
        }
      }
    },
    "/api/searchhistory": {
      "get": {
        "tags": ["User Data"],
        "summary": "获取搜索历史",
        "responses": {
          "200": {
            "description": "返回搜索历史列表",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "type": "string"
                  }
                }
              }
            }
          },
          "401": {
            "description": "未授权",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ApiError"
                }
              }
            }
          }
        }
      },
      "post": {
        "tags": ["User Data"],
        "summary": "新增搜索历史",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "keyword": {
                    "type": "string",
                    "minLength": 1,
                    "maxLength": 100
                  }
                },
                "required": ["keyword"]
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "返回更新后的历史列表",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "type": "string"
                  }
                }
              }
            }
          },
          "400": {
            "description": "参数验证失败",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ApiError"
                }
              }
            }
          }
        }
      },
      "delete": {
        "tags": ["User Data"],
        "summary": "删除搜索历史（单条或全部）",
        "parameters": [
          {
            "schema": {
              "type": "string"
            },
            "required": false,
            "name": "keyword",
            "in": "query"
          }
        ],
        "responses": {
          "200": {
            "description": "删除成功",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ApiSuccess"
                }
              }
            }
          },
          "401": {
            "description": "未授权",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ApiError"
                }
              }
            }
          }
        }
      }
    },
    "/api/skipconfigs": {
      "get": {
        "tags": ["User Data"],
        "summary": "获取全部跳过片头片尾配置",
        "responses": {
          "200": {
            "description": "返回配置映射",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/SkipConfigMap"
                }
              }
            }
          },
          "401": {
            "description": "未授权",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ApiError"
                }
              }
            }
          }
        }
      },
      "post": {
        "tags": ["User Data"],
        "summary": "保存跳过片头片尾配置",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "key": {
                    "type": "string",
                    "minLength": 1,
                    "pattern": "^.+\\+.+$"
                  },
                  "config": {
                    "type": "object",
                    "properties": {
                      "enable": {
                        "type": "boolean",
                        "default": true
                      },
                      "intro_time": {
                        "type": "integer",
                        "minimum": 0,
                        "default": 0
                      },
                      "outro_time": {
                        "type": "integer",
                        "minimum": 0,
                        "default": 0
                      }
                    }
                  }
                },
                "required": ["key", "config"]
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "保存成功",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ApiSuccess"
                }
              }
            }
          },
          "400": {
            "description": "参数验证失败",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ApiError"
                }
              }
            }
          }
        }
      },
      "delete": {
        "tags": ["User Data"],
        "summary": "删除单条跳过片头片尾配置",
        "parameters": [
          {
            "schema": {
              "type": "string"
            },
            "required": true,
            "name": "key",
            "in": "query"
          }
        ],
        "responses": {
          "200": {
            "description": "删除成功",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ApiSuccess"
                }
              }
            }
          },
          "400": {
            "description": "参数错误",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ApiError"
                }
              }
            }
          },
          "401": {
            "description": "未授权",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ApiError"
                }
              }
            }
          }
        }
      }
    }
  }
}
